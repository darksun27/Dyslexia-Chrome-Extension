{
    "manifest_version" : 2,
    "name" : "ColorPickerTry",
    "version" : "1",
    "description" : "A color picker extension",
    "browser_action" : {
        "default_popup" : "popup.html",
        "default_title" : "Change BGcolor"
    },
    "permissions" : [
        "notifications", "tabs"
    ],
    "background" : {
        "scripts" : ["content.js"],
        "persistent" : false
    },
    "content_scripts" : [
        {"matches" : [
            "<all_urls>"
        ],
        "js" : ["try.js", "jquery-3.4.1.min.js"],
        "css" : ["try.css"]
    }
    ]
}